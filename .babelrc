{
    "presets": [
        [
            "@babel/preset-env",
            {}
        ],
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-syntax-import-meta",
        [
            "@babel/plugin-transform-runtime",
            {
                "absoluteRuntime": false,
                "corejs": 2,
                "helpers": true,
                "regenerator": true,
                "useESModules": false
            }
        ],
        [
            "import",
            {
                "libraryName": "antd",
                "libraryDirectory": "es",
                "style": true // `style: css` 会加载 css 文件
            }
        ],
        [
            "react-css-modules",
            {
                "generateScopedName": "[name]-[local]-[hash:base64:5]",
                "exclude": "/(node_modules|src\/assets)/",
                "filetypes": {
                    ".less": {
                        "syntax": "postcss-less"
                    }
                },
            }
        ]
    ]
}